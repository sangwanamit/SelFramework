<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration debug="true"
  xmlns:log4j='http://jakarta.apache.org/log4j/'>

<!-- Log4j configuration file created by Shirish Kawatkar
	 The File helps to configure automation execution logs.
	 With the help of file you can enable/disable appenders and log levels -->
	 
	 
<!-- Appenders -->

<!-- Log in into console -->

	<appender name="console" class="org.apache.log4j.ConsoleAppender">
	    <layout class="org.apache.log4j.PatternLayout">
		<param name="ConversionPattern" 
			value="%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%L - %m%n" />
	    </layout>
	</appender>

<!-- Log in into file -->

	<appender name="file" class="org.apache.log4j.RollingFileAppender">
	    <param name="append" value="true" />
	    <param name="maxFileSize" value="10MB" />
	    <param name="maxBackupIndex" value="10" />
	    <param name="file" value= "./logs/automation.log" />
	    <layout class="org.apache.log4j.PatternLayout">
		<param name="ConversionPattern" 
			value="%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%L - %m%n" />
	    </layout>
	</appender>

<!-- Root logger -->
	<root>
		<level value="INFO" />
		<appender-ref ref="console" />
		<appender-ref ref="file" />
	</root>

<!-- Application Loggers -->
<logger name="SelFramework">
    <level value="info" />
</logger>

</log4j:configuration>